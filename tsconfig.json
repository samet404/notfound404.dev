{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/functions*": ["./src/functions/*"],
      "@/components*": ["./src/components/*"],
      "@/hooks*": ["./src/hooks/*"],
      "@/server*": ["./src/server/*"],
      "@/styles*": ["./src/styles/*"],
      "@/types*": ["./src/types/*"],
      "@/app*": ["./src/app/*"],
      "@/public*": ["./public/*"],
      "@/svg/*": ["public/images/svg/*"],
      "@/png*": ["public/images/png/*"],
      "@/jpg*": ["public/images/jpg/*"],
      "@/fonts*": ["public/fonts/*"],
      "@/videos*": ["public/videos/*"],
      "@/store*": ["src/store/*"],
      "@/webp*": ["public/images/webp/*"],
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts",
    "scripts/test.ts",
    "src/app/lib/placeholder-data.js"
  ],
  "exclude": ["node_modules","**/*.js"]
}
